<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="6dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CadastroActivity"
    tools:showIn="@layout/activity_cadastro">

    <EditText
        android:id="@+id/etValor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="10dp"
        android:autofillHints="@string/hint_valor"
        android:hint="@string/hint_valor"
        android:inputType="numberDecimal"
        android:textAlignment="textEnd"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/tvAviso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etValor"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="10dp"
        android:text="Custo"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/etObs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAviso"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="10dp"
        android:hint="@string/hint_nota"
        android:inputType="text"
        android:maxLength="8" />


    <Button
        android:id="@+id/btGastar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:textColor="@color/colorAccentText"
        android:text="@string/btn_gastar" />

</RelativeLayout>